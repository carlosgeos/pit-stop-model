int wheelsReady()
{
	int it;
	for(it=0; it&lt;mech_per_pit; ++it)
	{
		if(!wheel[id +it*PITS]) 
			return 0;
	}
	return 1;
}

int nextCarIncoming()
{
	if(id == PITS-1)
		return 0;
	else
		return incoming[id+1];
}

int previousCarLeaving()
{
	if(id == 0)
		return 0;
	else
		return leaving[id-1];
